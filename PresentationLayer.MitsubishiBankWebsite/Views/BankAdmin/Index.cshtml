
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="card-group">
        <div class="card card-danger-outline card-danger-outline">
            <div class="card-block ">
                <h4 class="card-title">Manage bank</h4>
                <p class="card-text">This is the section to control bank-related data.</p>
                <form action="@Url.Action("ManageBankAction", "BankAdmin")" method="post">
                    <select class="form-control center-block" name="action">
                        <option value="create">Deploy new bank</option>
                        <option value="update">Update bank data</option>
                        <option value="show">Show bank data</option>
                    </select>
                    <br />
                    <input type="submit" class="btn btn-danger btn-block center-block" value="Open" />
                </form>
            </div>
        </div>
        <div class="card card-warning-outline card-warning-outline">
            <div class="card-block">
                <h4 class="card-title">Manage employeers</h4>
                <p class="card-text">This is the section to control bank-related data.</p>
                @Html.ActionLink("Open", "Index", "BankAdmin", null, new { @class = "btn btn-danger btn-block center-block" })
            </div>
        </div>
        <div class="card card-warning-outline card-warning-outline">
            <div class="card-block">
                <h4 class="card-title">Manage customers</h4>
                <p class="card-text">This is the section to control bank-related data.</p>
                @Html.ActionLink("Open", "Index", "BankAdmin", null, new { @class = "btn btn-danger btn-block center-block" })
            </div>
        </div>
    </div>
</div>
